<UserPreferences::Categories
  @canSee={{this.canSee}}
  @model={{this.model}}
  @selectedCategories={{this.selectedCategories}}
  @hideMutedTags={{this.hideMutedTags}}
  @save={{action "save"}}
  @siteSettings={{this.siteSettings}}
/>

{{#if this.canSave}}
  <SaveControls
    @model={{this.model}}
    @action={{action "save"}}
    @saved={{this.saved}}
  />
{{else}}
  {{i18n "user.no_category_access"}}
{{/if}}