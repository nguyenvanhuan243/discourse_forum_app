<DModal
  @closeModal={{@closeModal}}
  @title={{i18n "review.approval.title"}}
  class="post-enqueued-modal"
>
  <:body>
    <p>{{i18n "review.approval.description"}}</p>
    <p>
      {{html-safe
        (i18n "review.approval.pending_posts" count=@model.pending_count)
      }}
    </p>
  </:body>
  <:footer>
    <DButton
      @action={{@closeModal}}
      class="btn-primary"
      @label="review.approval.ok"
    />
  </:footer>
</DModal>