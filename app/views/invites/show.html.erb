<div id='simple-container'>
  <%if flash[:error]%>
    <div class='invite-error'>
      <div class="error-image">
        <img src="<%= Discourse.base_path + '/images/sweat-smile-face.svg' %>" alt="sweat-smile-face emoji">
      </div>
      <div class="error-info">
        <%=flash[:error].html_safe%>
      </div>
    </div>
  <%end%>
</div>
